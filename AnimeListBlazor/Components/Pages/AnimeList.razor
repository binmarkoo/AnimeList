@page "/animelist"

<div class="anime-list-container">
    <h3 class="anime-list-title">AnimeList</h3>

    <div class="filter-container">
        <!-- Suchleiste -->
        <div class="anime-search-box">
            <input type="text" @bind="searchQuery" @bind:event="oninput"
                   class="search-input" placeholder="Finde deinen Anime..." />
            <span class="search-icon">🔍</span>
        </div>

        <!-- Filtergruppe -->
        <div class="filter-group">
            <div class="filter-item">
                <label class="filter-label">Rating</label>
                <input type="number" @bind="minRating" @bind:event="oninput" min="1" max="10"
                       class="filter-input" placeholder="Rating" />
            </div>
            <div class="filter-item">
                <label class="filter-label">Genre</label>
                <input type="text" @bind="genreFilter" @bind:event="oninput"
                       class="filter-input" placeholder="Action, Drama..." />
            </div>
            <div class="filter-item">
                <label class="filter-label">Status</label>
                <select @bind="stateFilter" class="filter-select">
                    <option value="" class="filter-option">Alle</option>
                    <option value="Completed" class="filter-option">Abgeschlossen</option>
                    <option value="Dropped" class="filter-option">Dropped</option>
                    <option value="Watching" class="filter-option">Am Schauen</option>
                    <option value="On Hold" class="filter-option">Pausiert</option>
                </select>
            </div>
            <div class="filter-item">
                <label class="filter-label">Typ</label>
                <select @bind="typeFilter" class="filter-select">
                    <option value="" class="filter-option">Alle</option>
                    <option value="TV" class="filter-option">TV-Serie</option>
                    <option value="Movie" class="filter-option">Film</option>
                </select>
            </div>
            <div class="filter-item">
                <label class="filter-label">Jahr</label>
                <input type="number" @bind="yearFilter" @bind:event="oninput"
                       class="filter-input" placeholder="Jahr" />
            </div>
        </div>
    </div>

    @if (animeItems == null)
    {
        <p class="loading-text">Loading...</p>
    }
    else if (filteredAnimeItems.Count == 0)
    {
        <p class="no-results-text">Keine Animes gefunden</p>
    }
    else
    {
        <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 g-3">
            @foreach (var item in filteredAnimeItems)
            {
                <div class="col">
                    <div class="card h-100" @onclick="async () => await ShowDetail(item)"
                         @onclick:stopPropagation="true" style="cursor: pointer">
                        <div class="card-img-container">
                            <img src="@item.PicSrc" class="card-img-top" alt="@item.Name">
                        </div>
                        <div class="card-body d-flex align-items-center justify-content-center p-2">
                            <h6 class="card-title text-center mb-0">@item.Name</h6>
                        </div>
                        <div class="card-genre-footer">
                            <small>@item.Genre</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (showDetail && selectedAnime != null)
    {
        <AnimeDetail SelectedAnime="selectedAnime" OnClose="CloseDetail" />
    }
</div>

@code {
    private List<AnimeItem> animeItems = new();
    private List<AnimeItem> filteredAnimeItems = new();
    private AnimeItem? selectedAnime = null;
    private bool showDetail = false;

    // Filter Properties mit Setter
    private string _searchQuery = string.Empty;
    private string searchQuery
    {
        get => _searchQuery;
        set
        {
            if (_searchQuery != value)
            {
                _searchQuery = value;
                FilterAnimes();
            }
        }
    }

    private int? _minRating;
    private int? minRating
    {
        get => _minRating;
        set
        {
            if (_minRating != value)
            {
                _minRating = value;
                FilterAnimes();
            }
        }
    }

    private string _genreFilter = string.Empty;
    private string genreFilter
    {
        get => _genreFilter;
        set
        {
            if (_genreFilter != value)
            {
                _genreFilter = value;
                FilterAnimes();
            }
        }
    }

    private string _stateFilter = string.Empty;
    private string stateFilter
    {
        get => _stateFilter;
        set
        {
            if (_stateFilter != value)
            {
                _stateFilter = value;
                FilterAnimes();
            }
        }
    }

    private string _typeFilter = string.Empty;
    private string typeFilter
    {
        get => _typeFilter;
        set
        {
            if (_typeFilter != value)
            {
                _typeFilter = value;
                FilterAnimes();
            }
        }
    }

    private int? _yearFilter;
    private int? yearFilter
    {
        get => _yearFilter;
        set
        {
            if (_yearFilter != value)
            {
                _yearFilter = value;
                FilterAnimes();
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            animeItems = await Http.GetFromJsonAsync<List<AnimeItem>>("api/AnimeItems");
            filteredAnimeItems = animeItems;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching media items: {ex.Message}");
        }
    }

    private void FilterAnimes()
    {
        var filtered = animeItems.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            filtered = filtered.Where(a => a.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));
        }

        if (minRating.HasValue)
        {
            // Exaktes Rating statt Minimum
            filtered = filtered.Where(a => a.Rating == minRating.Value);
        }

        if (!string.IsNullOrWhiteSpace(genreFilter))
        {
            filtered = filtered.Where(a =>
                !string.IsNullOrEmpty(a.Genre) &&
                a.Genre.Split(',')
                       .Any(g => g.Trim().Contains(genreFilter, StringComparison.OrdinalIgnoreCase)));
        }

        if (!string.IsNullOrWhiteSpace(stateFilter))
        {
            filtered = filtered.Where(a => a.State == stateFilter);
        }

        if (!string.IsNullOrWhiteSpace(typeFilter))
        {
            filtered = filtered.Where(a => a.Type == typeFilter);
        }

        if (yearFilter.HasValue)
        {
            filtered = filtered.Where(a => a.ReleaseYear == yearFilter.Value);
        }

        filteredAnimeItems = filtered.ToList();
    }

    private async Task ShowDetail(AnimeItem item)
    {
        selectedAnime = item;
        showDetail = true;
        await InvokeAsync(StateHasChanged);
    }

    private async Task CloseDetail()
    {
        showDetail = false;
        selectedAnime = null;
        await InvokeAsync(StateHasChanged);
    }
}
